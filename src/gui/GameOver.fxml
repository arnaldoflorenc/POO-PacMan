<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="gui.GameOverController" style="-fx-background-color: black;">
    <VBox alignment="CENTER" spacing="20">
        
        

        
        <Label text="GAME OVER" style="-fx-font-size: 36px; -fx-text-fill: red; -fx-font-family: 'Emulogic';" />

        <Label fx:id="finalPoints" text="Pontos: 0" style="-fx-font-size: 24px; -fx-text-fill: yellow; -fx-font-family: 'Emulogic';" />

        
        <Button text="VOLTAR AO MENU" onAction="#handleBackToMenu" style="-fx-font-size: 20px; -fx-text-fill: white; -fx-background-color: blue;" />
        <Button text="REINICIAR" onAction="#handleRestartGame" style="-fx-font-size: 20px; -fx-text-fill: white; -fx-background-color: blue;" />
    </VBox>
</StackPane>